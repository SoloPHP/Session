{
  "name": "solophp/session",
  "type": "library",
  "description": "Secure PHP Session Handler with advanced security features",
    "keywords": [
        "php",
        "session",
        "security",
        "session-handler",
        "php-session"
    ],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
            "email": "vedastudio@gmail.com",
            "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\Session\\": "src/"
    }
  },
  "require": {
        "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
